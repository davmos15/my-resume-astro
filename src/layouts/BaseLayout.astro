---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  success_msg?: string;
  error_msg?: string;
}

const { title, success_msg, error_msg } = Astro.props;
const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="stylesheet" href="/css/styles.css?v=10">
    <link rel="stylesheet" href="/css/navigation.css?v=10">
    <link rel="stylesheet" href="/css/theme-dropdown.css?v=10">
    <link rel="stylesheet" href="/css/theme-accordion.css?v=10">
    <link rel="stylesheet" href="/css/themes.css?v=10">
    <link rel="stylesheet" href="/css/themes-enhanced.css?v=10">
    <link rel="stylesheet" href="/css/resume-dashboard.css?v=10">
    <link rel="stylesheet" href="/css/projects-dashboard.css?v=10">
    <link rel="stylesheet" href="/css/contact.css?v=10">
</head>
<body>
    <!-- Navigation -->
    <Navigation />
    
    <!-- Flash messages -->
    {success_msg && success_msg.length > 0 && (
        <div class="alert alert-success">{success_msg}</div>
    )}
    {error_msg && error_msg.length > 0 && (
        <div class="alert alert-error">{error_msg}</div>
    )}
    
    <!-- Main content -->
    <main>
        <slot />
    </main>
    
    <!-- Footer -->
    <Footer currentYear={currentYear} />
    
    <script src="/js/script.js?v=11" is:inline></script>
    <script src="/js/afl-logo-system.js?v=10" is:inline></script>
    <script src="/js/theme-switcher.js?v=10" is:inline></script>
</body>
</html>